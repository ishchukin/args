{
    "version": 3,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}"
        },
        {
            "name": "cmake-pedantic",
            "hidden": true,
            "warnings": {
                "dev": true,
                "deprecated": true,
                "uninitialized": false,
                "unusedCli": true,
                "systemVars": false
            },
            "errors": {
                "dev": true,
                "deprecated": true
            }
        },
        {
            "name": "dev",
            "hidden": true,
            "inherits": [
                "cmake-pedantic"
            ],
            "cacheVariables": {
                "ARGS_DEVELOPER_MODE": "ON"
            }
        },
        {
            "name": "x64",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "win",
            "hidden": true,
            "inherits": [
                "common"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "unixlike",
            "hidden": true,
            "inherits": [
                "common"
            ]
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "dev-x64-win-debug-msvc-vcpkg",
            "inherits": [
                "dev",
                "x64",
                "win",
                "debug",
                "vcpkg",
                "msvc"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static-md",
                "VCPKG_MANIFEST_FEATURES": "test"
            }
        },
        {
            "name": "dev-x64-unixlike-debug-vcpkg",
            "inherits": [
                "dev",
                "x64",
                "unixlike",
                "debug",
                "vcpkg"
            ],
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "test"
            }
        }
    ],
    "testPresets": [
        {
            "name": "test-common",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error"
            }
        },
        {
            "name": "test-dev-x64-win-debug-msvc-vcpkg",
            "inherits": [
                "test-common"
            ],
            "configurePreset": "dev-x64-win-debug-msvc-vcpkg"
        },
        {
            "name": "test-dev-x64-unixlike-debug-vcpkg",
            "inherits": [
                "test-common"
            ],
            "configurePreset": "dev-x64-unixlike-debug-vcpkg"
        }
    ]
}
